  <a class="nav-link disabled" href="#">Disabled</a>
</nav>
 <div id="direct" class="centertext">
               <a class="nav-link" href="#" v-bind:class="{ 'active': layout == 'categorywomen'}" v-on:click="layout = 'categorywomen'"> <h4>Items in Stock liknk</h4> </a>
                
        <p> Size of all product in cart {{ getCartSize()}}</p>
       <ul v-for="item in cart" >
        <li> Names of items in a cart {{ item.product.name }}</li>
        <li> Quantity of items in a cart {{ item.quantity }} </li>
        </ul>
                
                </div>
  <div class="row">
        <div class="col-lg-12">
  
<div v-if="layout == 'categorylist'" class="menlist">


<div> 
          <div class="col-lg-12">
                <div class="centertext">
                <h2>Items in Stock</h2>
                </div>
                
            <paginate-links for="itemsdata" :limit="10 " :show-step-links="true"></paginate-links>
              <paginate-links for="itemsdata" :limit="15" :show-step-links="true"> </paginate-links>
              <paginate-links for="itemsdata" :simple="{
                    next: 'Next »',
                    prev: '« Back'
                  }"></paginate-links>
                  <paginate name="itemsdata" 
                  :list="itemsdata"
                  :per="4" class="paginate-list">
                    <li v-for="item in paginated('itemsdata')">
                    <div class="row">
                      <div class="col-lg-12">
                            <div class="col-lg-12 col-md-8">
                                  <div class="card h-100">
                                    <a href=""><img class="rounded-circle" :src= "item.image" alt="Generic placeholder image" width="150" height="150"/></a>
                                        <div class="card-body">
                                            <h4 class="card-title">
                            
                                              <a href="">{{ item.name }}</a>
                                            </h4>
                                            <h5>{{ item.price }}</h5>
                                    <button v-on:click="show = !show">  Product  </button> 
                                    <a class="btn btn-secondary" id="messages" v-on:click="addtocart(item)" role="button">Add to cart &raquo;</a>
                                          <p class="card-text" style="font-size:10px;">{{ item.description }}</p>
                                        </div>
                                        <div class="card-footer">
                                          <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                                           <div v-if= "show">
                                        <p> {{ item.name }} </p>
                                        <p> {{ item.price }} </p>
                                        </div>
                                        </transition
                                        </div>
                                  </div>
                              </div>
                            </div>
                        </div>
                      <div>    
                    </li>
                   
                  </paginate>
            </div>

            
            </div>
          </div>
        </div>
    </div>
  
</div>
